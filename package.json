{
  "name": "chatin",
  "version": "1.0.0",
  "type": "module",
  "description": "ChatGPT library with function call interface support",
  "main": "dist/index.js",
  "scripts": {
    "test": "tsup chatin.ts --dts --format cjs,esm -d .",
    "prepare": "tsup chatin.ts --dts --format cjs,esm -d . && husky install",
    "prepublishOnly": "node -e 'if (!process.env.GITHUB_ACTION) {console.log(\"Use semantic-release to publish!\");process.exit(-1);}'",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "cz": "cz"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@abraham/reflection": "^0.12.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.4",
    "@swc/core": "^1.3.68",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "commitizen": "^4.3.0",
    "cz-emoji": "^1.3.2-canary.2",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "openai": "^3.3.0",
    "semantic-release": "^21.0.7",
    "semantic-release-gitmoji": "^1.6.4",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix --"
    ]
  },
  "files": [
    "*.cjs",
    "*.js",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./chatin.d.ts",
      "require": "./chatin.cjs",
      "import": "./chatin.js"
    },
    "./*": {
      "types": "./*.d.ts",
      "require": "./*.cjs",
      "import": "./*.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "semantic-release-gitmoji",
        {
          "releaseRules": {
            "major": [
              ":boom:",
              ":tada:"
            ],
            "minor": [
              ":sparkles:"
            ],
            "patch": [
              ":bug:",
              ":ambulance:",
              ":lock:"
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": ":tada: (release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "gpt-tokenizer": "^2.1.1"
  }
}
